{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": ".dist",
    },
    "types": [
      "node",
      "jest"
    ] /* Specify type package names to be included without being referenced in a source file. */,

    "include": ["src/**/*.ts"],
    "exclude":["node_modules"]
}
